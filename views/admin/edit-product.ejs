<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

   <% editedProduct.forEach(editedProduct => { %>
    <main>
        <form class="product-form" action="/admin/edit-product/<%= editedProduct.id %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= editedProduct.title %>" >
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= editedProduct.imageUrl %>" >
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= editedProduct.price %>" >
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= editedProduct.description %></textarea>
            </div>
            <div class="form-control">
                <input type="hidden" name="id" id="id" value="<%= editedProduct.id %>" >
            </div>

            <button class="btn" type="submit">Update Product</button>
        </form>
    </main>
    <% })%>

<%- include('../includes/end.ejs') %>